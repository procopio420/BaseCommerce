# Staging Platform - Shared Infrastructure
# Copy to .env and fill in values

#------------------------------------------------------------------------------
# Application Settings
#------------------------------------------------------------------------------
SECRET_KEY=CHANGE_ME_RANDOM_SECRET_KEY_AT_LEAST_32_CHARS_STAGING
ENVIRONMENT=staging

#------------------------------------------------------------------------------
# PostgreSQL
#------------------------------------------------------------------------------
POSTGRES_USER=basecommerce
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_STAGING
POSTGRES_DB=basecommerce
POSTGRES_PORT=5432

#------------------------------------------------------------------------------
# Redis
#------------------------------------------------------------------------------
REDIS_PORT=6379

#------------------------------------------------------------------------------
# Outbox Relay
#------------------------------------------------------------------------------
OUTBOX_POLL_INTERVAL_MS=1000
OUTBOX_BATCH_SIZE=100

#------------------------------------------------------------------------------
# Engines Worker
#------------------------------------------------------------------------------
ENGINES_CONSUMER_GROUP=engines-main
ENGINES_CONSUMER_NAME=worker-1

#------------------------------------------------------------------------------
# WhatsApp Messaging Engine
#------------------------------------------------------------------------------
# Provider: "meta" for production, "stub" for development
WHATSAPP_PROVIDER=stub
# Webhook port
WHATSAPP_WEBHOOK_PORT=8090
# Token for Meta webhook verification (set in Meta Business Manager)
WHATSAPP_VERIFY_TOKEN=CHANGE_ME_RANDOM_VERIFY_TOKEN_STAGING
# App secret from Facebook App (for signature validation)
WHATSAPP_APP_SECRET=
# Fernet key for encrypting access tokens
WHATSAPP_ENCRYPTION_KEY=
# Consumer name for this worker instance
WHATSAPP_CONSUMER_NAME=worker-1
